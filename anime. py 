import nltk
from nltk.sentiment import SentimentIntensityAnalyzer
import matplotlib.pyplot as plt

nltk.download('vader_lexicon')

sia = SentimentIntensityAnalyzer()

anime_sentences = [
    "Gojo Satoru is the most badass character ever!",
    "I hate how they ended Attack on Titan. Terrible.",
    "One Piece is a legendary anime. Oda is a genius!",
    "Naruto had a lot of filler episodes. It was boring sometimes.",
    "That fight scene in Demon Slayer gave me chills!",
    "The animation in Jujutsu Kaisen is okay, not the best though.",
    "Luffy's Gear 5 transformation was insane!",
    "The story of Boruto is so disappointing.",
    "Levi Ackerman scenes are always top-tier.",
    "I cried at the end of Your Name. Beautiful movie."
]

sentiment_counts = {"Positive": 0, "Negative": 0, "Neutral": 0}
classified_data = []

for sentence in anime_sentences:
    scores = sia.polarity_scores(sentence)
    compound = scores['compound']

    if compound >= 0.05:
        sentiment = "Positive"
    elif compound <= -0.05:
        sentiment = "Negative"
    else:
        sentiment = "Neutral"

    sentiment_counts[sentiment] += 1
    classified_data.append((sentence, scores, sentiment))

print("\nðŸŽŒ Anime Sentiment Analysis Results ðŸŽŒ\n")
for sentence, scores, sentiment in classified_data:
    print(f"ðŸ’¬ Sentence: {sentence}")
    print(f"ðŸ“Š Scores: {scores}")
    print(f"ðŸ§  Sentiment: {sentiment}")
    print("-" * 60)

plt.figure(figsize=(6, 4))
plt.bar(sentiment_counts.keys(), sentiment_counts.values(), color=['green', 'red', 'gray'])
plt.title("Sentiment Distribution - Anime Fan Reactions")
plt.xlabel("Sentiment")
plt.ylabel("Number of Sentences")
plt.grid(True, linestyle='--', alpha=0.5)
plt.tight_layout()
plt.show()